
{
    "general": {
        "mode": "backtest",
        "symbols": ["TSLA", "NVDA", "AAPL"],
        "database_path": "xenia_state.db"
    },
    "backtest_config": {
        "initial_balance": 100000,
        "data_source": "YFinanceSource",
        "period": "2y",
        "interval": "1d",
        "executor": "PrintExecutor",
        "risk_controller": "FixedFractionSizer",
        "cv_splits": 3,
        "model_feature_map": {
            "TSLA": {"model": "GradientBoostingModel", "features": "VolatilityFeatures"},
            "NVDA": {"model": "RandomForestModel", "features": "StandardFeatures"},
            "AAPL": {"model": "RuleBasedModel", "features": "StandardFeatures"}
        }
    },
    "live_config": {
        "data_source": "LiveSource",
        "executor": "PrintExecutor",
        "risk_controller": "PortfolioLevelRiskManager",
        "interval_seconds": 3600,
        "resolution": "1h",
        "lookback_days": 200,
        "feature_sets_to_optimize": ["StandardFeatures", "VolatilityFeatures"],
        "models_to_optimize": ["RandomForestModel", "GradientBoostingModel"]
    },
    "component_params": {
        "FixedFractionSizer": {
            "fraction": 0.05,
            "min_volatility": 0.2,
            "confidence_threshold": 0.6
        },
        "PortfolioLevelRiskManager": {
            "max_portfolio_risk_per_trade": 0.02,
            "min_confidence": 0.65,
            "max_concurrent_positions": 5
        },
        "RandomForestModel": {
            "n_estimators": 150, "max_depth": 15, "min_samples_leaf": 5
        },
        "GradientBoostingModel": {
            "n_estimators": 150, "max_depth": 7, "learning_rate": 0.05
        }
    },
    "api_keys": {
        "alpaca_api_key": "YOUR_ALPACA_API_KEY",
        "alpaca_secret_key": "YOUR_ALPACA_SECRET_KEY",
        "paper_trading": true
    }
}
